/* pages/movie-search/index.wxss */
.search-wrapper {
  display: flex;
  flex-direction: row;
}
input {
  flex: 1;
  padding-left: 5px;
  color: #4a4a4a;
}

.result-wrapper {
  margin-top: 15px;
  height: 1080rpx;
  background-color: #fff;
}
.search-results {
  display: flex;
  flex-direction: row;
  padding: 10px;
  border-bottom: 1px solid #ccc;
}
.search-results image {
  width: 80rpx;
  height: 100rpx;
  min-width: 80rpx;
}
.search-results .detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 7px;
  max-width: 600rpx;
  overflow: hidden;
}
.detail .title {
  font-size: 32rpx;
  font-weight: bold;
}
.detail .other-info {
  width: 100%;
  font-size: 28rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}